{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,          // ‚Üê ignora errori nei .d.ts di node_modules
    "types": ["node"]              // usa le definizioni core di Node
  },
  "include": ["src"]
}
